<Window x:Name="VentanaPrincipal" x:Class="ProyectoIPO2020_2021.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoIPO2020_2021"
        mc:Ignorable="d"
        Title="Login" Height="500" Width="800"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        HorizontalContentAlignment="Stretch"
        VerticalContentAlignment="Stretch" Closing="VentanaPrincipal_Closing" SizeToContent="WidthAndHeight">
    <Grid Margin="0,0,76,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="94*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="95*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="44*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="61*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="102*"/>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="97*"/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>



        <Rectangle x:Name="FondoVentana" Stroke="Black" Grid.RowSpan="11" Grid.ColumnSpan="10" Margin="0,0,-76,0">
            <Rectangle.Fill>
                <ImageBrush Opacity="0.6" ImageSource="fondoLogin.jpg"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle x:Name="FondoLogin" Margin="2,0,0,69" Stroke="Black" Grid.Row="2" Grid.Column="2" Grid.RowSpan="9" Grid.ColumnSpan="7">
            <Rectangle.Fill>
                <SolidColorBrush Color="#FFACBDA6"/>
            </Rectangle.Fill>
        </Rectangle>
        <Label x:Name="lblLogin" Content="Correo electrónico" Height="32" Margin="0,2,0,0" VerticalAlignment="Top" FontFamily="Sitka Text" FontSize="16" Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="4"/>
        <TextBox x:Name="txtUsuario" TextWrapping="Wrap" Height="24" FontFamily="Sitka Text" Padding="4" TabIndex="1" KeyDown="txtUsuario_KeyDown" Grid.Row="5" Grid.Column="3" Grid.RowSpan="2" Grid.ColumnSpan="4" VerticalAlignment="Top"/>
        <Label x:Name="lblContraseña" Content="Contraseña" HorizontalAlignment="Left" Height="32" Margin="0,3,0,0" VerticalAlignment="Top" Width="150" FontFamily="Sitka Text" FontSize="16" Grid.Row="6" Grid.Column="3" Grid.ColumnSpan="2"/>
        <PasswordBox x:Name="passContra" VerticalAlignment="Top" Height="24" Padding="4" TabIndex="2" KeyUp="passContrasena_KeyUp" Grid.Row="7" Grid.Column="3" Grid.RowSpan="2" Grid.ColumnSpan="4"/>
        <Label x:Name="lblRecordarContra" Content="¿Olvidó su contraseña?" FontStyle="Italic" Height="35" VerticalAlignment="Top" Grid.Row="6" Grid.Column="5" Grid.ColumnSpan="3" Margin="0,0,1,0"/>
        <Button x:Name="btnLogin" Content="Iniciar Sesion" Padding="6" TabIndex="3" AllowDrop="True" Click="btnLogin_Click" Grid.Row="9" Grid.Column="4" Grid.ColumnSpan="2" Height="35" VerticalAlignment="Top"/>
        <Label x:Name="lblTituloLogin" Content="Iniciar Sesión" FontFamily="Sitka Text" FontSize="38" Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="4" Margin="0,1,0,0" VerticalAlignment="Bottom"/>
        <Image x:Name="imgIcono" Margin="2,1,0,0" Source="icono.png" Grid.Row="2" Grid.Column="2" Grid.RowSpan="2">
            <Image.OpacityMask>
                <ImageBrush ImageSource="icono.png"/>
            </Image.OpacityMask>
        </Image>
        <Image x:Name="imgCheckUsuario" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="30" Grid.Row="5" Grid.Column="7" Grid.RowSpan="2"/>
        <Image x:Name="imgCheckContrasena" HorizontalAlignment="Left" Height="30" Margin="0,2,0,0" VerticalAlignment="Top" Width="30" Grid.Row="7" Grid.Column="7" Grid.RowSpan="2"/>

    </Grid>
</Window>
